{
  "name": "@bobo-style/monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "An old-fashioned UI Component library for Vue3",
  "author": {
    "name": "Cole",
    "email": "bernankez@qq.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bernankez/bobo-style.git"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "rimraf packages/*/{dist,es,lib} **/volar.d.ts **/web-types.json",
    "dev": "pnpm -C playground dev",
    "build": "pnpm clean && pnpm -r -F \"./packages/{utils,components,bobo-style}\" build",
    "release": "bumpp package.json packages/**/package.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@bernankez/eslint-config": "^0.2.2",
    "@bernankez/utils": "^0.1.2",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash-es": "^4.17.6",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.33.0",
    "execa": "^6.1.0",
    "fs-extra": "^11.1.0",
    "happy-dom": "^8.2.6",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "lodash-es": "^4.17.21",
    "rimraf": "^3.0.2",
    "tsvx": "^0.0.1",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.1",
    "vite": "^4.1.1",
    "vite-plugin-dts": "^1.7.2",
    "vitest": "^0.28.4",
    "vue": "^3.2.41",
    "vue-tsc": "^1.0.24"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}
